<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/bt_cm_intent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Camera Intent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bt_cmx_api"
        />
    <Button
        android:id="@+id/bt_cmx_api"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CameraX API"
        app:layout_constraintTop_toBottomOf="@+id/bt_cm_intent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>